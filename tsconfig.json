{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],

    "module": "esnext", // ðŸ‘ˆ REQUERIDO para dynamic import()
    "moduleResolution": "bundler", // ðŸ‘ˆ Recomendado por Next 13/14/15
    "jsx": "preserve",

    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": { "@/*": ["./src/*"] },

    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
